[sub_resource type="Resource" id="Line_01"]
script = ExtResource("1_dialogue_line")
speaker = 1
portrait = 0
text = "Christmas is coming. You have to admit—decorated like this, it feels warm."
metadata/_custom_type_script = "uid://bw5nvw6g1w033"

[sub_resource type="Resource" id="Line_02"]
script = ExtResource("1_dialogue_line")
portrait = 0
text = "Yeah… I still haven’t decided what to eat for Christmas dinner."
metadata/_custom_type_script = "uid://bw5nvw6g1w033"

[sub_resource type="Resource" id="Line_03"]
script = ExtResource("1_dialogue_line")
speaker = 1
portrait = 3
text = "Gingerbread men? How about gingerbread men?"
metadata/_custom_type_script = "uid://bw5nvw6g1w033"

[sub_resource type="Resource" id="Line_04"]
script = ExtResource("1_dialogue_line")
portrait = 1
text = "Sounds good. Classic enough."
metadata/_custom_type_script = "uid://bw5nvw6g1w033"

[sub_resource type="Resource" id="Line_05"]
script = ExtResource("1_dialogue_line")
portrait = 0
text = "Hey—"
has_choices = true
choices = Array[String](["Am I the only person you’ve seen here?", "Lately I’ve been thinking—promises and vows don’t mean more than a nod between strangers, do they?"])
choice_branches = Array[ExtResource("2_dialogue_act")]([ExtResource("3_branch_1"), ExtResource("4_branch_2")])
metadata/_custom_type_script = "uid://bw5nvw6g1w033"

[sub_resource type="Resource" id="Line_06"]
script = ExtResource("1_dialogue_line")
speaker = 1
portrait = 2
text = "Sigh. I wish we could keep skiing like this forever."
metadata/_custom_type_script = "uid://bw5nvw6g1w033"

[sub_resource type="Resource" id="Line_07"]
script = ExtResource("1_dialogue_line")
portrait = 0
text = "Sure. If you’re interested, we could follow the border all the way across—with our skis."
metadata/_custom_type_script = "uid://bw5nvw6g1w033"

[sub_resource type="Resource" id="Line_08"]
script = ExtResource("1_dialogue_line")
speaker = 1
portrait = 0
text = "Yeah. Take our skis, catch a train, ski wherever we like. Straight to some remote country like Schief. Nothing on us but polished snow boots and a solid pair of gloves."
metadata/_custom_type_script = "uid://bw5nvw6g1w033"

[sub_resource type="Resource" id="Line_09"]
script = ExtResource("1_dialogue_line")
portrait = 3
text = "Schief? I went fishing there last summer. Want to hear about it? The scenery is beautiful."
metadata/_custom_type_script = "uid://bw5nvw6g1w033"

[sub_resource type="Resource" id="Line_10"]
script = ExtResource("1_dialogue_line")
speaker = 1
portrait = 0
text = "Maybe I’ll be lucky enough to see it myself someday."
metadata/_custom_type_script = "uid://bw5nvw6g1w033"

